<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/number1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.152"
            app:layout_constraintVertical_bias="0.186"/>
    <EditText
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/number2"
            app:layout_constraintTop_toBottomOf="@+id/number1"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.153"
            app:layout_constraintVertical_bias="0.051"/>
    <EditText
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/result"
            app:layout_constraintTop_toBottomOf="@+id/number2"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.153"
            app:layout_constraintVertical_bias="0.054"/>
    <Button
            android:text="*"
            android:layout_width="50dp"
            android:layout_height="50dp" android:id="@+id/btnMultiply"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.634"
            app:layout_constraintVertical_bias="0.189"/>
    <Button
            android:text="/"
            android:layout_width="50dp"
            android:layout_height="50dp" android:id="@+id/btnDivide"
            app:layout_constraintStart_toEndOf="@+id/btnMultiply" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.487" app:layout_constraintVertical_bias="0.186"/>
    <Button
            android:text="+"
            android:layout_width="50dp"
            android:layout_height="50dp" android:id="@+id/btnSum"
            app:layout_constraintTop_toBottomOf="@+id/btnMultiply"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.634"
            app:layout_constraintVertical_bias="0.047"/>
    <Button
            android:text="-"
            android:layout_width="50dp"
            android:layout_height="50dp" android:id="@+id/btnSubtract"
            app:layout_constraintTop_toBottomOf="@+id/btnDivide"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.047" app:layout_constraintStart_toEndOf="@+id/btnSum"
            app:layout_constraintHorizontal_bias="0.487"/>
    <Button
            android:text="="
            android:layout_width="140dp"
            android:layout_height="50dp" android:id="@+id/btnResult"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.845" app:layout_constraintVertical_bias="0.419"/>
</androidx.constraintlayout.widget.ConstraintLayout>